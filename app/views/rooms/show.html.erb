<div class="title-contents">
  <div class="header-logo m-3">
  <%= link_to root_path, class: "text-decoration-none link-dark" do %>
    <h1>Koogi mart</h1>
  <% end %>
  </div>
</div>
<div class="conteiner m-3">
  <div class="row g-3">
    <div class="order-border2 col-12 my-4">
    </div>
  </div>
</div>
<div class="d-flex justify-content-around">
  <div class="chat-main">
    <div class="chat-area p-3">
      <div class="message-box ps-4 mb-2">
        <div class="d-flex">
          <div class="message-border">
          </div>
          <div class="message-name fs-5">
            <p>Tom</p>
          </div>
          <div class="message-date fs-5 ps-5">
            <p>2021.12.24.10:25</p>
          </div>
        </div>
        <div class="message-main fs-5 ps-2">
          <p>Hello<p>
        </div>
      </div>
      <div class="message-box ps-4">
        <div class="d-flex">
          <div class="message-name fs-5">
            <p>Creator</p>
          </div>
          <div class="message-date fs-5 ps-5">
            <p>2021.12.24.11:22</p>
          </div>
        </div>
        <div class="message-main fs-5 ps-2">
          <p>hello! Thank you for watching my order.<p>
        </div>
      </div>
    </div>
    <div class="form p-3">
      <div class="container pt-3">
        <%= form_with local: true do |f| %>
          <div class="row g-3">
            <div class="mb-3 col-10">
              <%= f.text_field "#", class: "form-control", placeholder: "Input Message" %>
            </div>
            <div class="mb-3 col-2">
              <%= f.submit "Submit", class:"btn btn-primary btn-lg"%>
            </div>
          </div>
          <hr class="my-4">
        <% end %>
      </div>
    </div>
  </div>
  <div class="order-chat-info">
    <div>
      <div class="p-5 bg-light rounded-3 mb-2">
        <%= image_tag @order.main_order_image.variant(resize: '200x200'), class:"m-4 image-fluid mx-auto"%>
          <table>
            <tbody>
              <tr>
                <h4><%= @order.order_name %></h4>
              </tr>
              <tr class="pt-4">
                <th>ジャンル</th>
                <td><%= @order.genre.name %></td>
              </tr>
              <tr>
                <th>予算</th>
                <td>￥<%= @order.order_price_min %> ~ ￥<%= @order.order_price_max %></td>
              </tr>
              <tr>
                <th>日数</th>
                <td><%= @order.day_min %>日 ~<%= @order.day_max %>日</td>
              </tr>
            </tbody>
          </table>
          <%= link_to "詳細", "/orders/#{@order.id}", class: "btn btn-primary mt-3" %>
      </div>
    </div>
    <div>
      </div>
    </div>

  </div>
</div>
