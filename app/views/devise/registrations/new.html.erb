<div class="title-contents">
  <div class="header-logo m-3">
  <%= link_to root_path, class: "text-decoration-none link-dark" do %>
    <h1>Koogi<br>mart</h1>
  <% end %>
  </div>
</div>
<div class="my-page-main p-2">
  <div class="order-input-area my-5 mx-auto p-4">
    <div class="container">
      <h4 class="mb-3">ユーザー登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="row g-3">
          <div class="col-sm-12">
            <label class="form-label">ユーザー名<span class="text-muted">(必須)</span></label>
            <%= f.text_field :nickname, id: "nickname", class: "input-default form-control", maxlength:"40" %>
          </div>
          <div class="col-sm-12">
            <label class="form-label">メールアドレス<span class="text-muted">(必須)</span></label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
          </div>
          <div class="creator-short-text col-12 mb-3">
            <label class="form-label">パスワード<span class="text-muted">(必須)</span></label>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="creator-short-text col-12 mb-3">
            <label class="form-label">パスワード(再入力)<span class="text-muted">(必須)</span></label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <hr class="my-4">
        <%= f.submit "Sign up", class:"w-100 btn btn-primary btn-lg"%>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "トップページへ戻る", root_path%>
  </div>
</div>