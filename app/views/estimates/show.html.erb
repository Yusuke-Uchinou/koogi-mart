<div class="title-contents">
  <div class="header-logo m-3">
  <%= link_to root_path, class: "text-decoration-none link-dark" do %>
    <h1>Koogi<br>mart</h1>
  <% end %>
  </div>
</div>
<div class="my-page-main p-2">
  <div class="order-input-area my-5 mx-auto p-4">
    <div class="container">
      <h4 class="mb-3">見積もり内容確認</h4>
        <div class="row g-3">
          <div class="col-sm-12">
            <label class="form-label">オーダータイトル</label>
            <h5><%= @estimate.room.order.order_name %></h5>
          </div>
          <div class="col-sm-12">
            <label class="form-label">金額</label>
            <h4>￥<%= @estimate.estimate_price %></h4>
          </div>
          <div class="creator-short-text col-12 mb-3">
            <label class="form-label">特記事項</label>
            <h4><%= @estimate.estimate_text %></h4>
          </div>
          <div class="col-md-12">
            <%= image_tag @estimate.estimate_image.variant(resize: '500x500') if @estimate.estimate_image.attached? %>
          </div>
        </div>
        <hr class="my-4">
        <% if @creator.user_id == current_user.id %>
          <%= link_to "見積もり内容を編集する", class:"w-100 btn btn-primary btn-lg"%>
        <% else %>
          <%= link_to "精算する", class:"w-100 btn btn-primary btn-lg"%>
        <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "トップページへ戻る", root_path%>
  </div>
</div>