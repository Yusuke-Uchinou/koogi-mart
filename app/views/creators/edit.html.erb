<div class="title-contents">
  <div class="header-logo m-3">
    <h1>Koogi<br>mart</h1>
  </div>
</div>
<div class="my-page-main p-2">
  <div class="creator-input-area my-5 mx-auto p-4">
    <div class="container">
      <h4 class="mb-3">クリエイター情報編集</h4>
      <%= form_with model: @creator, url: creator_path(@creator.id), method: :patch, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="row g-3">
          <div class="col-sm-12">
            <label class="form-label">クリエイター名<span class="text-muted">(必須)</span></label>
            <%= f.text_field :creator_name, class: "form-control", maxlength:"40"%>
          </div>
          <div class="creator-short-text col-12 mb-3">
            <label class="form-label">サムネイル用紹介文<span class="text-muted">(任意・100文字まで)</span></label>
            <%= f.text_area :creator_short_text, class: "form-control", maxlength:"100"%>
          </div>
          <div class="mb-3 col-12">
            <label class="form-label">紹介文<span class="text-muted">(必須)</span></label>
            <%= f.text_area :creator_text, class: "form-control creator-text" %>
          </div>
          <div class="col-md-12">
            <label for="formFile" class="form-label">アトリエイメージ</label>
            <input class="form-control" type="file" id="formFile">
          </div>
        </div>
        <hr class="my-4">
        <%= f.submit "Confirm", class:"w-100 btn btn-primary btn-lg"%>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "トップページへ戻る", root_path%>
  </div>
</div>